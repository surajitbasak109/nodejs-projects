<div class="author">
  <h1 class="author-heading">Hi, I am Surajit.</h1>
  <p class="author-body">Web developer and content creator.</p>
</div>

<img src="/images/hero-image.webp" alt="person looking out through window" class="hero-image" width="980" height="528">

<section class="articles">
  <h2 class="articles-heading">Latest Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>
      <li>
        <a href="/posts/<%= post._id %>">
          <span><%= post.title %></span>
          <span class="article-list-date"><%= post.createdAt.toDateString() %></span>
        </a>
      </li>
    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
