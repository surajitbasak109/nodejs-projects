<a href="/admin/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2>View / Edit post</h2>
  <form
    action="/admin/delete-post/<%= post._id %>?_method=DELETE"
    method="POST"
  >
    <input type="submit" value="Delete" class="btn-delete btn" />
  </form>
</div>

<form action="/admin/edit-post/<%= post._id %>?_method=PUT" method="POST">
  <label for="title">Title</label>
  <input
    id="title"
    type="text"
    placeholder="Post title"
    value="<%= post.title %>"
    name="title"
  />

  <label for="body">Content</label>
  <textarea name="body" id="body" cols="50" rows="10"><%= post.body %></textarea>

  <hr />

  <% if (post.author) { %>
  <p>
    This post was created by
    <a href="/author/<%= post.author._id %>" target="_blank">
      <%= post.author.fullname %>
    </a>
  </p>
  <% } %>

  <input type="submit" value="Update" class="btn" />
</form>
